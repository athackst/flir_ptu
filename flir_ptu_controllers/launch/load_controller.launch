<launch>
	
	<!-- Load joint controller configurations from YAML file to parameter server -->
	<rosparam file="$(find flir_ptu_controllers)/config/flir_ptu_controllers.yaml" command="load"/>
	
	<node ns="ptu" name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen"  args="--shutdown-timeout=1 flir_ptu_position_controller"/> 

</launch>
