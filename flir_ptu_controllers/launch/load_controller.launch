<launch>
	
	<!-- Load joint controller configurations from YAML file to parameter server -->
	<rosparam file="$(find flir_ptu_controllers)/config/flir_ptu_controllers.yaml" command="load"/>
	
	<node ns="ptu" name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen"  args="--shutdown-timeout=1 joint_state_controller  joint_state_position_controller"/> 
	
	<node ns="ptu" name="controller_spawner_stopped" pkg="controller_manager" type="spawner" respawn="false" output="screen"  args="--stopped --shutdown-timeout=1 joint_trajectory_controller joint_pan_position_controller joint_tilt_position_controller"/> 
	
</launch>
